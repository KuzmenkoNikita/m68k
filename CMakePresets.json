{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-config",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },

        {
            "name": "debug-config",
            "hidden": true,
            "inherits": ["base-config"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }           
        },
        {
            "name": "release-config",
            "hidden": true,
            "inherits": ["base-config"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }           
        },

        {
            "name": "clang-config",
            "hidden": true,
            "inherits": ["base-config"],
            "cacheVariables": {
              "CMAKE_C_COMPILER": "clang",
              "CMAKE_CXX_COMPILER": "clang++"
            }           
        },

        {
            "name": "Clang-debug-config",
            "hidden": false,
            "inherits": ["debug-config", "clang-config"]
        },

        {
            "name": "Clang-release-config",
            "hidden": false,
            "inherits": ["release-config", "clang-config"]
        }
    ]
}